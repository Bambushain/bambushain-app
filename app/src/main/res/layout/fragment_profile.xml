<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel" type="app.bambushain.my.ProfileViewModel"/>
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout">
        <com.google.android.material.appbar.AppBarLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/toolbarLayout">
            <com.google.android.material.appbar.MaterialToolbar
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/toolbar"
                    app:menu="@menu/my_profile_menu">
            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/margin"
                    android:layout_marginHorizontal="@dimen/activity_horizontal_margin">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:id="@+id/bambooGroveImage"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/bambooGroveImage"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintHeight_max="@dimen/card_header"
                            app:srcCompat="@drawable/bamboo_grove"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:id="@+id/profileDisplayName"
                            android:text="@{viewModel.displayName}"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            app:layout_constraintStart_toStartOf="@id/bambooGroveImage"
                            app:layout_constraintTop_toBottomOf="@id/bambooGroveImage"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:id="@+id/profileEmail"
                            android:text="@{viewModel.email}"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?android:attr/textColorSecondary"
                            app:layout_constraintStart_toStartOf="@id/profileDisplayName"
                            app:layout_constraintTop_toBottomOf="@id/profileDisplayName"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:id="@+id/profileDiscordNameLabel"
                            android:text="@string/label_profile_discord_name"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?android:attr/textColorSecondary"
                            android:visibility="@{viewModel.discordName.empty ? android.view.View.GONE : android.view.View.VISIBLE}"
                            app:layout_constraintStart_toStartOf="@id/profileEmail"
                            app:layout_constraintTop_toBottomOf="@id/profileEmail"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/profileDiscordName"
                            android:text="@{viewModel.discordName}"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?android:attr/textColorPrimary"
                            android:visibility="@{viewModel.discordName.empty ? android.view.View.GONE : android.view.View.VISIBLE}"
                            app:layout_constraintStart_toEndOf="@id/profileDiscordNameLabel"
                            app:layout_constraintTop_toTopOf="@id/profileDiscordNameLabel"/>
                    <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:id="@+id/editProfile"
                            android:text="@string/action_edit_my_profile"
                            app:layout_constraintTop_toBottomOf="@id/profileDiscordName"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>